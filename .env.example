# Database Configuration (Docker service names)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/app_db

# Redis Configuration (Docker service names)
REDIS_URL=redis://redis:6379/0
LOCATION_CACHE_TTL_SECONDS=86400 # Optional: Cache TTL for locations (default 24h)

# Celery Configuration (Docker service names)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
ROUTE_AVAILABILITY_CHECK_SCHEDULE_INTERVAL_SECONDS=60
ROUTE_EXPIRATION_CHECK_SCHEDULE_INTERVAL_SECONDS=300

# JWT Configuration
SECRET_KEY=your_super_secret_jwt_key_here_min_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
EMAIL_CONFIRMATION_TOKEN_EXPIRE_MINUTES=60
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60

# Application Base URL (for Docker development)
FRONTEND_URL=http://localhost:8080

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
EMAILS_FROM_EMAIL=noreply@example.com
SMTP_TLS=true
SMTP_SSL=false
EMAIL_CONFIRMATION_URL_BASE=http://localhost:8080/confirm-email

# CORS Configuration (JSON-like list of allowed origins)
CORS_ORIGINS='["http://localhost:8080", "http://localhost:3000"]'

# Flower Configuration (Celery monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# Traefik Configuration (for production deployment)
TRAEFIK_USER=admin
TRAEFIK_PASSWORD=your_traefik_password

# Postgres Configuration (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db

# Let's Encrypt Configuration (for production deployment)
LETSENCRYPT_EMAIL=your_email@example.com

# SQLAdmin Configuration
SQL_ADMIN_USERNAME=admin
SQL_ADMIN_PASSWORD=admin123
